<div id="convert-input">
  <input type="radio" id="input-base-bin" name="base" value="bin" />
  <label for="input-base-bin" class="button">binary</label>

  <input type="radio" id="input-base-oct" name="base" value="oct" />
  <label for="input-base-oct" class="button">octal</label>

  <input type="radio" id="input-base-dec" name="base" value="dec" checked="checked" />
  <label for="input-base-dec" class="button">decimal</label>

  <input type="radio" id="input-base-hex" name="base" value="hex" />
  <label for="input-base-hex" class="button">hex</label>

  <input type="text" id="number" placeholder="Type a number, any number..." />
</div>

<div id="convert-result"></div>
